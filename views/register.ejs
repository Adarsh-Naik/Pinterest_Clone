<% include ./partials/header.ejs %>

<div class="br-center bg-cover bg-[url('/images/register.jpg')] bg-zinc-500 w-full h-screen  flex items-center justify-center ">
    <div class="w-[22vw]  bg-white px-10 py-10 rounded-[30px]">
      <h1 class="text-2xl tracking-tight text-center leading-none font-semibold text-zinc-700 capitalize">Create New Account</h1>
      <br>
      <form action="/register" method="post">
        <label class="capitalize text-zinc-500">Email</label>
        <input class="border-2 rounded-full mt-2 w-full px-5 py-2" type="email" name="email" placeholder="Email">
        <label class="capitalize text-zinc-500">Full Name</label>
        <input class="border-2 rounded-full mt-2 w-full px-5 py-2" type="text" name="fullname" placeholder="Full Name">
        <label class="capitalize text-zinc-500">Contact</label>
        <input class="border-2 rounded-full mt-2 w-full px-5 py-2" type="number" name="contact" placeholder="Contact Number">
        <label class="capitalize text-zinc-500">Username</label>
        <input class="border-2 rounded-full mt-2 w-full px-5 py-2" type="text" name="username" placeholder="Username">
        <label class="capitalize text-zinc-500">password</label>
        <input class="border-2 rounded-full mt-2 w-full px-5 py-2" type="password" name="password"
        placeholder="Password">
        <input class="border-2  block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Register">
      </form>
      <a href="/" class="w-full text-zinc-500 inline-block mt-7 text-center text-sm font-semibold ">Already have an account? Sign in</a>
    </div>
  </div>

<% include ./partials/footer.ejs %>