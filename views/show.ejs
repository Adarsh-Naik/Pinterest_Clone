<% include ./partials/header.ejs %>

<div class="w-full min-h-full bg-zinc-800 px-10 py-8 text-white ">
    <div class="cards flex flex-wrap gap-10 w-full">
        <% user.posts.forEach(function(elem){%>
            <div class="card w-32">
                <div class="bg-zinc-700 w-full h-40 rounded-md overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="mt-2 text-md"><%= elem.title%></h5>
                <h5 class="mt-2 text-md">"<%= elem.description%>"</h5>
            </div>
        <%})%>
    </div>
</div>

<% include ./partials/footer.ejs %>